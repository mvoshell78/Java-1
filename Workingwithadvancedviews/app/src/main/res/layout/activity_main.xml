<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mich.workingwithadvancedviews.MainActivity"
    android:id="@+id/TextsView">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkersName"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:paddingTop="40dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jobRespon"
        android:layout_below="@+id/WorkersName"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:textSize="22dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkersPhone"
        android:layout_below="@+id/jobRespon"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkersBio"
        android:layout_below="@+id/WorkersPhone"
        android:paddingTop="20dp" />

</RelativeLayout>
