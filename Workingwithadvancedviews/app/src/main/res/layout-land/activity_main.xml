<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mich.workingwithadvancedviews.MainActivity"
    android:id="@+id/textView">

    <ListView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:clickable="true"
        tools:listitem="@android:layout/simple_list_item_1"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/WorkersName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listView"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jobRespon"
        android:layout_below="@+id/WorkersName"
        android:layout_alignStart="@+id/WorkersName"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkersPhone"
        android:layout_below="@+id/jobRespon"
        android:layout_toEndOf="@+id/listView"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/WorkersBio"
        android:layout_below="@+id/WorkersPhone"
        android:layout_alignStart="@+id/WorkersPhone"
        android:paddingLeft="50dp"
        android:paddingTop="20dp" />

</RelativeLayout>
